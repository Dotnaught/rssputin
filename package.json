{
	"name": "rssputin",
	"productName": "rssputin",
	"version": "1.0.0",
	"description": "An RSS headline aggregator",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/Dotnaught/rssputin.git"
	},
	"bugs": {
		"url": "https://github.com/Dotnaught/rssputin/issues"
	},
	"homepage": "https://github.com/Dotnaught/rssputin#readme",
	"author": {
		"name": "Thomas Claburn",
		"email": "tc@lot49.com",
		"url": "https://lot49.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"date-fns": "^2.16.1",
		"electron-context-menu": "^2.3.1",
		"electron-debug": "^3.0.0",
		"electron-notarize": "^1.0.0",
		"electron-store": "^6.0.1",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.14.2",
		"rss-parser": "^3.10.0"
	},
	"devDependencies": {
		"electron": "^11.1.1",
		"electron-builder": "^22.9.1",
		"np": "^7.2.0",
		"xo": "^0.37.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.lot49.rssputin",
		"afterSign": "scripts/notarize.js",
		"mac": {
			"category": "public.app-category.news",
			"target": [
				"dmg"
			  ],
			"darkModeSupport": false,
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"type": "distribution",
			"icon": "build/icon.icns"
		},
		"mas": {
			"entitlements": "build/entitlements.mas.plist",
			"provisioningProfile": "build/Lot_49_Labs_Mac_Distribution.provisionprofile",
			"type": "distribution",
			"category": "public.app-category.news"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network"
		}
	},
	"publish": [
		{
			"provider": "github",
			"owner": "Dotnaught"
		}
	]
}
