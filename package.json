{
  "name": "rssputin",
  "productName": "rssputin",
  "version": "1.1.2",
  "description": "An RSS headline aggregator",
  "license": "MIT",
  "type": "module",
  "exports": "./index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/Dotnaught/rssputin.git"
  },
  "bugs": {
    "url": "https://github.com/Dotnaught/rssputin/issues"
  },
  "homepage": "https://github.com/Dotnaught/rssputin#readme",
  "author": {
    "name": "Thomas Claburn",
    "email": "tc@lot49.com",
    "url": "https://lot49.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint",
    "test": "npm run lint",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows --publish never",
    "publish": "electron-builder --macos --linux --windows --publish always"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "date-fns": "^4.1.0",
    "electron-context-menu": "^4.0.4",
    "electron-debug": "^4.0.1",
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.2.0",
    "electron-notarize": "^1.2.2",
    "electron-store": "^10.0.0",
    "electron-unhandled": "^5.0.0",
    "electron-updater": "^6.3.4",
    "electron-util": "^0.18.1",
    "octokit": "^4.0.2",
    "rss-parser": "^3.13.0",
    "ssl-root-cas": "^1.3.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.4.0",
    "electron": "^33.2.1",
    "electron-builder": "^v25.0.5",
    "eslint": "^9.10.0"
  },
  "build": {
    "appId": "com.lot49.rssputin",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.news",
      "target": [
        "zip",
        "dmg"
      ],
      "darkModeSupport": false,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "type": "distribution",
      "icon": "build/icon.icns",
      "provisioningProfile": "build/rssputin_dev.provisionprofile"
    },
    "mas": {
      "entitlements": "build/entitlements.mas.plist",
      "provisioningProfile": "build/rssputin_mas.provisionprofile",
      "type": "distribution",
      "category": "public.app-category.news"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    }
  },
  "publish": [
    {
      "provider": "github",
      "owner": "Dotnaught"
    }
  ]
}
