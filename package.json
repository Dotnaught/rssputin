{
	"name": "rssputin",
	"productName": "rssputin",
	"version": "1.0.0",
	"description": "An RSS headline aggregator",
	"license": "MIT",
	"repository": "sindresorhus/electron-boilerplate",
	"author": {
		"name": "Thomas Claburn",
		"email": "tc@lot49.com",
		"url": "https://lot49.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"date-fns": "^2.16.1",
		"electron-context-menu": "^2.3.1",
		"electron-debug": "^3.0.0",
		"electron-store": "^6.0.1",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.14.2",
		"rss-parser": "^3.10.0"
	},
	"devDependencies": {
		"electron": "^11.1.1",
		"electron-builder": "^22.9.1",
		"np": "^7.2.0",
		"xo": "^0.37.1"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.lot49.rssputin",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
