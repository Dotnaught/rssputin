{
	"name": "rssputin",
	"productName": "rssputin",
	"version": "1.0.6",
	"description": "An RSS headline aggregator",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/Dotnaught/rssputin.git"
	},
	"bugs": {
		"url": "https://github.com/Dotnaught/rssputin/issues"
	},
	"homepage": "https://github.com/Dotnaught/rssputin#readme",
	"author": {
		"name": "Thomas Claburn",
		"email": "tc@lot49.com",
		"url": "https://lot49.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows --publish never",
		"publish": "electron-builder --macos --linux --windows --publish always"
	},
	"dependencies": {
		"@octokit/rest": "^18.9.0",
		"ajv": "^8.6.2",
		"date-fns": "^2.23.0",
		"electron-context-menu": "^3.1.1",
		"electron-debug": "^3.2.0",
		"electron-fetch": "^1.7.4",
		"electron-log": "^4.4.1",
		"electron-notarize": "^1.1.0",
		"electron-store": "^8.0.0",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^4.3.9",
		"electron-util": "^0.17.0",
		"rss-parser": "^3.12.0",
		"ssl-root-cas": "^1.3.1",
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"electron": "^16.0.4",
		"electron-builder": "^22.9.1",
		"eslint": "^8.0.1"
	},
	"build": {
		"appId": "com.lot49.rssputin",
		"afterSign": "scripts/notarize.js",
		"mac": {
			"category": "public.app-category.news",
			"target": [
				"zip",
				"dmg"
			],
			"darkModeSupport": false,
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"type": "distribution",
			"icon": "build/icon.icns"
		},
		"mas": {
			"entitlements": "build/entitlements.mas.plist",
			"provisioningProfile": "build/Lot_49_Labs_Mac_Distribution.provisionprofile",
			"type": "distribution",
			"category": "public.app-category.news"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network"
		}
	},
	"publish": [
		{
			"provider": "github",
			"owner": "Dotnaught"
		}
	]
}
